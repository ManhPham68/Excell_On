}
@section css{

    <link href="~/Content/Duc/Carousel.css" rel="stylesheet" />
    <link href="~/Content/Duc/StaffProfile2.css" rel="stylesheet" />
    <link href="~/Content/Duc/StaffProfile1.css" rel="stylesheet" />
}
@section js{
    <script>
        $('#carousel-example').on('slide.bs.carousel', function (e) {
            /*
                CC 2.0 License Iatek LLC 2018 - Attribution required
            */
            var $e = $(e.relatedTarget);
            var idx = $e.index();
            var itemsPerSlide = 5;
            var totalItems = $('.carousel-item').length;

            if (idx >= totalItems - (itemsPerSlide - 1)) {
                var it = itemsPerSlide - (totalItems - idx);
                for (var i = 0; i < it; i++) {
                    // append slides to end
                    if (e.direction == "left") {
                        $('.carousel-item').eq(i).appendTo('.carousel-inner');
                    }
                    else {
                        $('.carousel-item').eq(0).appendTo('.carousel-inner');
                    }
                }
            }
        });
    </script>
    <script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
    <script type="text/javascript">
        function _Book(Service_Id) {
            var list_option = $('.select_search option');
            console.log(list_option);
            $.each(list_option, function () {
                if ($(this).val() == Service_Id) {
                    $('.select_search').val($(this).val()).change();
                }
            });
        }
    </script>
}
