@using _ExcellOn_.Models
@model List<_ExcellOn_.Models.Image>
@{
    Entities db = new Entities();
    var image = Model.Take(1);
    Service service = new Service();
    foreach (var item in image)
    {
        service = db.Services.Find(item.ServiceId);
    }

}
<section>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="section-heading text-center mb-sm-5 mb-4">
                <h3 class="title-style mb-2">Service Slider Show</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container">
            <div class="row">
                <div id="carousel-example" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner row w-100 mx-auto" role="listbox">
                        <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 active">
                            <img src="~/Public/Image/95-telemarketing.jpg" style="width: 100%;height: 300px;border-radius: 10px" class="img-fluid mx-auto d-block" alt="img1">
                            <figcaption style="margin-top: 15px" class="text-center">
                                <h6 style="font-weight:bold">
                                    We are always ready to hear anything from our customers
                                </h6>
                                <p>@service.Service_Name - $@service.Service_Price - @service.Staffs.Count Staff</p>
                            </figcaption>
                        </div>
                        @foreach (var item in Model)
                        {
                            <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 text-center">
                                <img src="@item.Image_link" style="width: 100%;height: 300px;border-radius:10px" class="img-fluid mx-auto d-block" alt="img1">
                                <figcaption style="margin-top: 15px">
                                    <h6 style="font-weight:bold">
                                        We are always ready to hear anything from our customers
                                    </h6>
                                    <p>@item.Service.Service_Name - $@item.Service.Service_Price - @item.Service.Staffs.Count Staff</p>
                                </figcaption>
                            </div>

                        }

                    </div>
                </div>
            </div>

            <div class="row" style="margin-top: 20px">
                <div class="col-xs-3 mx-auto">
                    <style>
                        .btn-style-white:hover{
                            color: indianred
                        }
                    </style>
                    <a class="btn-style-white" href="#carousel-example" role="button" data-slide="prev" style="background-color:transparent">
                        <span class="fa fa-fw fa-long-arrow-left" aria-hidden="true" style="font-size: 2.5rem"></span>
                    </a>
                    <a class="btn-style-white" href="#carousel-example" role="button" data-slide="next" style="background-color:transparent">
                        <span class="fa fa-fw fa-long-arrow-right" aria-hidden="true" style="font-size: 2.5rem"></span>
                    </a>
                </div>

            </div>
        </div>
    </div>


</section>

