</div>

<button onclick="topFunction()" style="background-color: transparent" id="btn_top" title="Go to top">
    <img src="~/Public/Image/up-arrow (1).png" width="50" height="50" />
</button>
@section css{
    <link href="~/Areas/Admin/Public/css/panel.css" rel="stylesheet" />
    <style>
        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            color: black !important;
        }

        .select2-container--default.select2-container--focus .select2-selection--multiple, .select2-container--default .select2-selection--multiple {
            height: 40px;
            min-height: 40px;
        }

        .selection span {
            padding-top: 1px !important;
        }

        .dropdown-menu {
            padding: 0px !important;
        }

        .show {
            top: 5px !important;
        }

        .order_status {
            color: blue;
        }

        .ord_status {
            color: orangered;
        }
    </style>
}

@section js {
    <script src="~/Areas/Admin/Script_HuyDuc/Order/ManageOrder.js"></script>
