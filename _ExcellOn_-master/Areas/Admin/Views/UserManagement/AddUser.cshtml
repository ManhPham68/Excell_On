@model _ExcellOn_.Models.UserInFo
@{ Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml"; }

<div class="main-content">

    <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url('/Public/Image/city.jpg'); background-size: cover; background-position: center top;">
        <span class="mask" style="opacity:0.6;background-color:black"></span>
        <div class="container-fluid d-flex align-items-center">
            <div class="row">
                <div class="col-lg-7 col-md-10">
                    <h1 class="display-2 text-white">Hello </h1>
                    <p class="text-white mt-0 mb-5">This is your profile page. You can see the progress you've made with your work and manage your projects or assigned tasks</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt--7">
        <div class="row">
            <div class="col-xl-12 order-xl-1">
                <div class="card bg-secondary shadow">
                    <div class="card-header bg-white border-0">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">New Account</h3>
                            </div>

                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/UserManagement/Submit_Add" method="post" enctype="multipart/form-data">
                            <h6 class="heading-small text-muted mb-4">User information</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-last-name">Full Name</label>
                                            <input type="text" required name="User_FullName" class="form-control form-control-alternative">
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-first-name">Email Address</label>
                                            <input type="text" name="User_Email" required class="form-control form-control-alternative">
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-country">Telephone</label>
                                            <input type="text" name="User_Phone" required class="form-control form-control-alternative">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-lg-3 text-right" style="margin-bottom: 20px;">
                                        <p class="form-control-label">Avatar</p>
                                        <input name="AvatarUpload" type="file" class="btn btn-sm btn-primary col-lg-12">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-username">Username</label>
                                            <input type="text" name="User_Name" class="form-control form-control-alternative">
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Password</label>
                                            <input type="password" required name="User_Password" class="form-control form-control-alternative">
                                        </div>
                                    </div>
                                   

                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-address">Department</label>
                                            <select name="RoleId[]" class="select" multiple>
                                                @foreach (var item in ViewBag.list_role)
                                                {
                                                    <option value="@item.Id">@item.Role_Name</option>
                                                }
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group focused">
                                            <label class="form-control-label" style="margin-bottom: 20px" for="input-address">Gender</label>
                                            <div>
                                                <span style="margin-right: 100px">
                                                    <input type="radio" name="User_Gender" value="0">
                                                    <label class="form-control-label" for="input-last-name">Male</label>
                                                </span>
                                                <span>
                                                    <input type="radio" name="User_Gender" value="1">
                                                    <label class="form-control-label" for="input-last-name">Female</label><br>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-city">Age</label>
                                            <input type="number" required name="User_Age" class="form-control form-control-alternative">
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-address">Address</label>
                                            <input name="User_Address" required class="form-control form-control-alternative" type="text">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-address">About Me</label>
                                            <textarea name="User_AboutMe" class="form-control form-control-alternative" rows="10"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="pl-lg-4" style="float:right">
                                <a href="/Admin/UserManagement/UserIndex" class="btn btn-danger">Close</a>
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="row align-items-center justify-content-xl-between">
        <div class="col-xl-6 m-auto text-center">
            <div class="copyright">

            </div>
        </div>
    </div>
</footer>

@section css{
    <style>
        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            color: black !important;
        }

        .select2-container--default.select2-container--focus .select2-selection--multiple, .select2-container--default .select2-selection--multiple {
            height: 45px;
            min-height: 40px;
        }

        span {
            padding-top: 4px !important;
        }
    </style>
}
@section js{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $('select').select2({
            placeholder: 'Role',
            tokenSeparators: [',', ' '],

        });
    </script>
}

